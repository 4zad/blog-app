<div class="row">
    <div class="col-md-12 table-responsive">
        <h2>Posts</h2>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <td>Post ID</td>
                    <td>Title</td>
                    <td>Post Date</td>
                    <td>Category</td>
                    <td>Published</td>
                </tr>
            </thead>

            <tbody>
                {{#each posts}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.postDate}}</td>
                    <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                    <td>{{this.published}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{#unless posts}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>

